<% if ie8_support %>
  <% require_asset 'vendor/_normalize-1.x' %>
<% else %>
  <% require_asset 'vendor/_normalize-2.x' %>
<% end %>

<% if extensions[:syntax] %>
  <%= syntax_theme.render(:scope => '.highlight') %>
<% end %>

@import 'bourbon';
@import 'neat';

$pink: rgb(244, 144, 205);
$light-pink: tint($pink, 90%);
$yellow: rgb(253, 177, 80);
$light-yellow: tint(yellow, 95%);

body {
}

ul {
  list-style: none;
}

div.container {
  @include outer-container;

  background-color: $light-yellow;
  box-shadow: 0 0 10px black;

  header {
    @include row;
    @include pad(2em);

    background-color: $light-pink;
  }

  div.main-content {
    @include row;
    @include pad(2em);
  }

  footer {
    @include pad(0.5em 1em);

    background-color: $light-pink;
  }
}
